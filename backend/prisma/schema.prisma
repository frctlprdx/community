generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  phone_number String?
  passwordHash String
  role Role @default(MEMBER)
  bio String?
  profilePicture String?
  createdAt DateTime @default(now())

  communityMemberships CommunityMember[]
  loginHistories    LoginHistory[]   // relasi ke history login

  @@map("users")
}

model Community {
  id       Int       @id @default(autoincrement())
  name     String
  createdAt DateTime @default(now())

  galleries Gallery[] @relation("CommunityGallery")
  events    Event[]   @relation("EventCreator")
  communityMemberships CommunityMember[]

  @@map("communities")
}

model Gallery {
  id          Int       @id @default(autoincrement())
  title       String
  imageUrl    String?
  uploadedAt  DateTime  @default(now())

  // Relasi ke Community
  community   Community? @relation("CommunityGallery", fields: [communityId], references: [id])
  communityId Int?

  @@map("galleries")
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String @db.LongText
  date        DateTime
  imageUrl    String?
  createdAt   DateTime  @default(now())

  // Relasi ke Community
  createdBy   Community? @relation("EventCreator", fields: [createdById], references: [id])
  createdById Int?

  @@map("events")
}

model CommunityMember {
  id          Int       @id @default(autoincrement())
  userId      Int
  communityId Int
  joinedAt    DateTime  @default(now())

  user        User      @relation(fields: [userId], references: [id])
  community   Community @relation(fields: [communityId], references: [id])

  @@unique([userId, communityId])
  @@map("community_members")
}

model LoginHistory {
  id         Int      @id @default(autoincrement())
  userId     Int
  loginAt    DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])

  @@map("login_history")
}

enum Role {
  ADMIN
  COMMUNITY
  MEMBER
}
