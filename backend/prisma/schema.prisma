generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  passwordHash String
  role Role @default(MEMBER)
  bio String?
  profilePicture String?
  createdAt DateTime @default(now())
  community      Community? @relation(fields: [communityId], references: [id])
  communityId    Int?

  @@map("users")
}

model Community {
  id       Int       @id @default(autoincrement())
  name     String
  createdAt DateTime @default(now())

  members  User[]    // one-to-many
  galleries Gallery[] @relation("CommunityGallery")
  events    Event[]   @relation("EventCreator")

  @@map("communities")
}

model Gallery {
  id          Int       @id @default(autoincrement())
  title       String
  imageUrl    String?
  uploadedAt  DateTime  @default(now())

  // Relasi ke Community
  community   Community? @relation("CommunityGallery", fields: [communityId], references: [id])
  communityId Int?

  @@map("galleries")
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  imageUrl    String?
  createdAt   DateTime  @default(now())

  // Relasi ke Community
  createdBy   Community? @relation("EventCreator", fields: [createdById], references: [id])
  createdById Int?

  @@map("events")
}

enum Role {
  ADMIN
  COMMUNITY
  MEMBER
}
